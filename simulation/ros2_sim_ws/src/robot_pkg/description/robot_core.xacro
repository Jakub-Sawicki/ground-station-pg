<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <xacro:property name="mul1" value="0.2"/>
    <xacro:property name="mul2" value="0.2"/>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>


    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.31 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.31 0 0.05"/>
            <geometry>
                <box size="0.62 0.2 0.1"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.31 0 0.05"/>
            <geometry>
                <box size="0.62 0.2 0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="6.0" x="0.62" y="0.2" z="0.1">
            <origin xyz="0.31 0 0.05" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>


    <!-- FRONT SUSPENSION LINK -->
    
    <joint name="front_suspension_joint" type="fixed">
        <parent link="base_link"/>
        <child link="front_suspension"/>
        <origin xyz="0.3 0 0.05" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="front_suspension">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.36"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.36"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1.0" length="0.36" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="front_suspension">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- LEFT FRONT WHEEL LINK -->

    <joint name="left_front_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_front_wheel"/>
        <origin xyz="0.3 0.22 0.05" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.08"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.08"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1.0" length="0.08" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_front_wheel">
        <material>Gazebo/Black</material>
        <mul1>{mul1}</mul1>
        <mul2>{mul2}</mul2>
    </gazebo>

    <!-- RIGHT FRONT WHEEL LINK -->

    <joint name="right_front_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_front_wheel"/>
        <origin xyz="0.3 -0.22 0.05" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.08"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.08"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1.0" length="0.08" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_front_wheel">
        <material>Gazebo/Black</material>
        <mul1>{mul1}</mul1>
        <mul2>{mul2}</mul2>
    </gazebo>

    <!-- BACK SUSPENSION LINK -->
    
    <joint name="back_suspension_joint" type="fixed">
        <parent link="base_link"/>
        <child link="back_suspension"/>
        <origin xyz="-0.3 0 0.05" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="back_suspension">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.36"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.36"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1.0" length="0.36" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="back_suspension">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- LEFT BACK WHEEL LINK -->

    <joint name="left_back_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_back_wheel"/>
        <origin xyz="-0.3 0.22 0.05" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.08"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.08"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1.0" length="0.08" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_back_wheel">
        <material>Gazebo/Black</material>
        <mul1>{mul1}</mul1>
        <mul2>{mul2}</mul2>
    </gazebo>

    <!-- RIGHT BACK WHEEL LINK -->

    <joint name="right_back_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_back_wheel"/>
        <origin xyz="-0.3 -0.22 0.05" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.08"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.08"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1.0" length="0.08" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_back_wheel">
        <material>Gazebo/Black</material>
        <mul1>{mul1}</mul1>
        <mul2>{mul2}</mul2>
    </gazebo>

</robot>
